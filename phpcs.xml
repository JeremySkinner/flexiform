<?xml version="1.0"?>
<ruleset name="Flexiform coding standards">
    <description>Drupal 8 coding standards</description>

    <exclude-pattern>*/.git/*</exclude-pattern>
    <exclude-pattern>*/config/*</exclude-pattern>
    <exclude-pattern>*/css/*</exclude-pattern>
    <exclude-pattern>*/js/*</exclude-pattern>
    <exclude-pattern>*/icons/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <rule ref="Drupal">
        <exclude name="Drupal.Commenting.DocComment.MissingShort"/>
        <exclude name="Drupal.Commenting.DocComment.TagsNotGrouped"/>
        <exclude name="Drupal.Commenting.HookComment.HookParamDoc"/>
        <exclude name="Drupal.Commenting.HookComment.HookReturnDoc"/>
        <exclude name="Drupal.Commenting.FileComment"/>
        <exclude name="Drupal.Commenting.ClassComment"/>
        <exclude name="Drupal.Commenting.FunctionComment"/>
        <exclude name="Drupal.Commenting.InlineComment"/>

        <exclude name="Drupal.Files.LineLength.TooLong"/>
        <exclude name="Drupal.Array.Array.LongLineDeclaration"/>
        <exclude name="Drupal.NamingConventions.ValidVariableName.LowerCamelName"/>
    </rule>
</ruleset>
